<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_800"
    android:layout_alignParentBottom="true">

    <TextView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear_details"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="@color/colorD8d8d8"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/linear_details"
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/film_yuan"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_noe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30">

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/cinema_down" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_20"
                android:text="类型:" />

            <TextView
                android:id="@+id/txt_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_type"
                android:layout_marginLeft="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_10"
                android:text="导演:" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_credit"
                android:layout_marginLeft="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_20"
                android:text="时长:" />

            <TextView
                android:id="@+id/txt_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_time"
                android:layout_marginLeft="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_20"
                android:text="产地:" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_briefing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="剧情简介"
                android:textColor="@color/colorDeepYellow"
                android:textSize="@dimen/sp_20" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="2dp"
                android:layout_below="@id/txt_briefing"
                android:background="@drawable/purplechange" />

            <TextView
                android:id="@+id/txt_film_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="4" />

            <TextView
                android:id="@+id/txt_those"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="演职人员"
                android:textColor="@color/colorDeepYellow"
                android:textSize="@dimen/sp_20" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="2dp"
                android:layout_below="@id/txt_briefing"
                android:background="@drawable/purplechange" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_2">


                <Button
                    android:id="@+id/btn_actor_name"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/yellow_chang"
                    android:text="演员名字"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/btnEng_name"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/yellow_chang"
                    android:text="饰渡角色"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/txt_actor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_actor_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="周建峰"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/txt_btnEng_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/btn_actor_name"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="徐家辉"
                    android:textSize="@dimen/dp_20" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sm_film_pic"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_160"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_20" />

</RelativeLayout>