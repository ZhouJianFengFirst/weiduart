<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/square_gray"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attention_film_img"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_128"
            android:layout_margin="@dimen/dp_10"
            app:placeholderImage="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attention_film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影名称"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/attention_film_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_85"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:text="电影内容"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/attention_film_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="电影日期"
                android:textColor="@color/color999999"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
