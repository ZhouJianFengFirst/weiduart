<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ActivityAttention">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:text="电影"
            android:background="@drawable/purplechange"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/attention_tv_film"
            />
        <TextView
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:text="影院"
            android:background="@drawable/square_gray"
            android:textColor="@color/color333333"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_32"
            android:id="@+id/attention_tv_cinema"
            />

    </LinearLayout>

    <com.example.xlistviewlib.XListView
        android:id="@+id/attention_xlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/left_return"
        android:id="@+id/attention_cv_leftreturn"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>