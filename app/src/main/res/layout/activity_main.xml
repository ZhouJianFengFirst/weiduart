<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30">

        <ImageView
            android:id="@+id/btn_film"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_toLeftOf="@id/btn_cinema"
            android:src="@drawable/film_yes" />

        <ImageView
            android:id="@+id/btn_cinema"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_centerInParent="true"
            android:src="@drawable/cinema_no" />

        <ImageView
            android:id="@+id/btn_my"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_toRightOf="@id/btn_cinema"
            android:src="@drawable/my_no" />

    </RelativeLayout>
</RelativeLayout>