<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_rv_date"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/purplechange"
        android:gravity="center"
        android:text="日期"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/history_rv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="电影名称"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/history_rv_payment"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/yellowchange"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/history_rv_ordernumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="订单号:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/history_rv_cinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="影院:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/history_rv_moviehall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="影厅:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/history_rv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="时间:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/history_rv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="数量:0"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/history_rv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="金额:0.00元"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

</LinearLayout>
